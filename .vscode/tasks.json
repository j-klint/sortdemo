{
    "tasks": [
        {
            "label": "C/C++: build and link",
            "dependsOn": "Mk the built dir",
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },

            "windows": {
                "label": "C/C++: cl.exe käännä ohjelma",
                "type": "cppbuild",
                "command": "cl.exe",
                "args": [
                    "/arch:AVX2",
                    "/GR-",
                    "/O2",
                    "/GL",
                    "/Gw",
                    "/MT",
                    "/W4",
                    "/std:c++17",
                    "/EHsc",
                    "/nologo",
                    "/Fe${workspaceFolder}\\built\\sortdemo.exe",
                    "${workspaceFolder}\\*.cpp",
                    "/link",
                    "/LTCG"
                ],
                "options": {
                    "cwd": "${workspaceFolder}\\built"
                },
                "problemMatcher": [
                    "$msCompile"
                ]
            },

            "linux": {
                "label": "C/C++: g++ käännä ohjelma",
                "type": "shell",
                "command": "/usr/bin/g++",
                "args": [
                    "-fdiagnostics-color=always",
                    // "-g", // debug
                    "-O3",
                    "-o",
                    "${workspaceFolder}/built/sortdemo",
                    "-std=c++17",
                    "-Wall",
                    "-Wpedantic",
                    "-Wextra",
                    "${workspaceFolder}/*.cpp"
                ],
                "options": {
                    "shell": "/bin/bash",
                    "cwd": "${workspaceFolder}"
                },
                "problemMatcher": [
                    "$gcc"
                ]
            },

            "detail": "Task generated by Debugger."
        },

        {
            "label": "Mk the built dir",
            "windows": {
                "group": "build",
                "type": "shell",
                "options": { "shell": { "executable": "powershell" } },
                "command": "New-Item",
                "args": [
                    "-Force",
                    "-ItemType",
                    "Directory",
                    "${workspaceFolder}\\built"
                ]
            },
            "linux": {
                "group": "build",
                "type": "process",
                "options": { "shell": { "executable": "/bin/bash" } },
                "command": "mkdir",
                "args": [
                    "-p",
                    "${workspaceFolder}/built"
                ]
            },
            "detail": "Makes the built directory in case it doesn't exist yet."
        }
    ],
    "version": "2.0.0"
}
